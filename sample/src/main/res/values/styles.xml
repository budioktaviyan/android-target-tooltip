<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.Tooltip">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center</item>
        <item name="ttlm_padding">25dp</item>
        <item name="ttlm_strokeColor">#ffe5a000</item>
        <item name="ttlm_backgroundColor">#ffe5c700</item>
        <item name="ttlm_strokeWeight">2dp</item>
        <item name="ttlm_cornerRadius">8dp</item>
        <item name="ttlm_overlayStyle">@style/TooltipOverlay</item>
    </style>
    <style name="TooltipOverlay">
        <item name="android:color">#66ff0000</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">400</item>
    </style>
    <style name="ToolTipCustomFont" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_font">fonts/pangolin.ttf</item>
    </style>
</resources>